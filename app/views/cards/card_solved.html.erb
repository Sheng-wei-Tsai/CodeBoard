                        </div>
                      <% end %> 
                    <div>
                      <div id='comment'>
                        <% @comments.each do |comment|%>
                          <%= comment.content%>
                        <% end%>
                    </div>              
                    -->
                  </div>
                <% end %>
              <% end %>

            </div>

          </div>
